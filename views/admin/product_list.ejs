<%- contentFor('content') %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Product List</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin">Home</a></li>
              <li class="breadcrumb-item active">Product List</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><%= title %></h3>
                        <a href="/product-add"  class="btn btn-primary"  style="float:right">Product Add</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="product_table" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Sl No</th>
                            <th>Main Category</th>
                            <th>Sub Category</th>
                            <th>Product Name</th>
                            <th>Product Image </th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(var i=0; i < product.length; i++) { %>
                            <tr>
                                <td><%= i+1 %></td>
                                <td><%= product[i].name %></td>
                                <td><%= product[i].c_name %></td>
                                <td><%= product[i].p_name %></td>
                                <td> <img src="/uploads/<%= product[i].p_image %>" class="img-responsive cat-img" alt="<%= product[i].p_image %>" width="100px" height="100px"></td>
                                <td><%= product[i].description %></td>
                                <td><% if(product[i].status == 1){ %> Active <% } else { %> Deactive <% } %></td>
                                <td><a href="product-edit/<%= product[i].id %>"><i class="fas fa-edit"></i></a> <a class="delete_product" data-id="<%= product[i].id %>"><i class="fas fa-trash"></i></a></td>
                            </tr>
                        <% } %>
                        </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
            </div>
        </div>
    </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>