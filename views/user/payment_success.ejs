<%- contentFor('user_content') %>
<div class="main">
<div id="invoice">

    <div class="toolbar hidden-print">
        <div class="text-right">
            <button id="printInvoice" class="btn btn-info"><i class="fa fa-print"></i> Print</button>
            <!--<button onclick="javascript:demoFromHTML();" class="btn btn-info"><i class="fa fa-file-pdf-o"></i> Export as PDF</button> -->
        </div>
        <hr>
    </div>
    <div class="invoice overflow-auto" id="in_data_pdf">
        <div style="min-width: 600px">
            <header>
                <div class="row">
                    <div class="col">
                        <a target="_blank" href="/">
                            <img src="/assets/images/finer.jpeg" class="data_img" data-holder-rendered="true" />
                            </a>
                    </div>
                    <div class="col company-details">
                        <h2 class="name">
                            <a target="_blank" href="/">
                                Finer Threads
                            </a>
                        </h2>
                        <div>5000 avenue walkley </div>
                        <div>Montreal H4V2M2</div>
                        <div>Email: finerthreads@gmail.com.com</div>
                        <div>Phone: 514-6250305</div>
                    </div>
                </div>
            </header>
            <main>
                <div class="row contacts">
                    <div class="col invoice-to">
                        <div class="text-gray-light">INVOICE TO:</div>
                        <h2 class="to"><%= locals.cust_name %></h2>
                        <div class="email"><a href="mailto:<%= locals.cust_email %>"><%= locals.cust_email %></a></div>
                        <div><%= locals.cust_phone %></div>
                    </div>
                    <div class="col invoice-details">
                        <h1 class="invoice-id">INVOICE #<%= locals.pay_id %></h1>
                        <div class="date">Date of Invoice: <%= locals.day %></div>
                    </div>
                </div>
                <table border="0" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th class="text-left">Item</th>
                            <th class="text-right">Image</th>
                            <th class="text-right">Size</th>
                            <th class="text-right">Color</th>
                            <th class="text-right">Price</th>
                            <th class="text-right">Qty</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < ins_data.length ; i++) { %>
                        <tr>
                            <td class="no"><%= i + 1 %></td>
                            <td><%= ins_data[i].p_name %></td>
                            <td class="text-left"><img src="/uploads/<%= ins_data[i].p_image %>" alt="<%= ins_data[i].p_name %>" class="prd_img"></td>
                            <td class="unit"><%= ins_data[i].size %></td>
                            <td class="qty"><%= ins_data[i].color %></td>
                            <td class="total">$<%= ins_data[i].price %></td> 
                            <td class="total"><%= ins_data[i].quntity %></td> 
                            <td class="total"><%= ins_data[i].total_price %></td> 
                        </tr>
                        <% } %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2"></td>
                            <td colspan="2">SUBTOTAL</td>
                            <td>$<%= locals.total_price - 2 %></td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td colspan="2">Shiping charge</td>
                            <td>$2</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td colspan="2">GRAND TOTAL</td>
                            <td>$<%= locals.total_price %></td>
                        </tr>
                    </tfoot>
                </table>
                <div class="thanks">Thank you!</div>
                <div class="notices">
                    <div>NOTICE:</div>
                    <div class="notice">A finance charge of 1.5% will be made on unpaid balances after 30 days.</div>
                </div>
            </main>
            <footer>
                Invoice was created on a computer and is valid without the signature and seal.
            </footer>
        </div>
        <!--DO NOT DELETE THIS div. IT is responsible for showing footer always at the bottom-->
        <div></div>
    </div>
</div>
</div>