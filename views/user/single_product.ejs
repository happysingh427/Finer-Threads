<%- contentFor('user_content') %>
<div class="main">
    <section class="module">
      <div class="container">
        <%if (locals.message) { %>
            <div class="alert <%= messageClass %>" role="alert">
              <%= message %>
          </div>
          <% } %>
        <div class="row">
            <% if(product_list.length == 1){ %>
            <% for(var i=0; i < product_list.length; i++) { %>
          <div class="col-sm-6 mb-sm-40"><a class="gallery" href="/uploads/<%= product_list[i].p_image %>"><img src="/uploads/<%= product_list[i].p_image %>" alt="uploads/<%= product_list[i].p_name %>"/></a>
          </div>
          <div class="col-sm-6">
            <div class="row">
              <div class="col-sm-12">
                <h1 class="product-title font-alt"><%= product_list[i].p_name %></h1>
              </div>
            </div>
            <div class="row mb-20">
              <div class="col-sm-12">
                <div class="price font-alt"><span class="amount">$<%= product_list[i].p_price %></span><del class="del_price"> <% if(product_list[i].dis_price != 0) { %> $<%= product_list[i].dis_price  %> <% } %> </del></div>
              </div>
            </div>
            <div class="row mb-20">
              <div class="col-sm-12">
                <div class="description">
                  <p><%= product_list[i].description %></p>
                </div>
              </div>
            </div>
            <form action="" method="post" name="add_cart" id="add_cart">
                <div class="row mb-20">
                <div class="col-sm-4 mb-sm-20">
                    <label for="quntity">Quntity</label>
                    <input class="form-control input-lg" type="number" name="quntity" id="quntity" value="1" max="40" min="1" required="required" onkeypress="return isNumber(event);"/>
                </div>
                <div class="col-sm-4 mb-sm-20">
                    <label for="size">Size</label>
                    <select name="size" id="size" class="form-control input-lg">
                        <% for(var j=0; j < size.length ; j++) { %> 
                            <option value="<%= size[j].id %>"><%= size[j].size %></option>
                        <% } %>
                    </select>
                </div>
                <div class="col-sm-4 mb-sm-20">
                    <label for="color">Color</label>
                    <select name="color" id="color" class="form-control input-lg">
                        <% for(var j=0; j < color.length ; j++) { %> 
                            <option value="<%= color[j].id %>"><%= color[j].color %></option>
                        <% } %>
                    </select>
                </div>
                <input type="hidden" name="p_id" id="p_id" value="<%= product_list[i].id %>">
                <input type="hidden" name="p_price" id="p_price" value="<%= product_list[i].p_price %>">
                <% if(product_list[i].p_quntity != 0){ %>
                    <div class="col-sm-8" style="margin-top: 35px;"><button type="submit" class="btn btn-lg btn-block btn-round btn-b">Add To Cart</button></div>
                <% } else { %>
                    <div class="col-sm-8" style="margin-top: 35px;"><button disabled class="btn btn-lg btn-block btn-round btn-b">Out of stock</button></div>
                <% } %>
                </div>

            </form>
            <div class="row mb-20">
              <div class="col-sm-12">
                <div class="product_meta">Categories:<a href="#"><%= product_list[i].name %> </a>, <a href="#"><%= product_list[i].c_name %> </a>
                </div>
              </div>
            </div>
          </div>
          <% } %>
          <% } %>
        </div>
      </div>
    </section>
